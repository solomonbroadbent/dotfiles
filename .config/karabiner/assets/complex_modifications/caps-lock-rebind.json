{
  "title": "caps_lock layer binis",
  "rules": [
    {
      "description": "caps_lock -> escape if alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            },
	    {
		"set_variable": {
		    "name": "layer-wm",
		    "value": 0
		}
	    },
	    {
		"set_variable": {
		    "name": "layer-wm-move",
		    "value": 0
		}
	    }
          ]
        }
      ]
    },
    {
      "description": "layer: window manager",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w"
          },
          "to": [
            {
              "set_variable": {
                "name": "layer-wm",
                "value": 1
              }
            },
	    {
		"shell_command": "yabai -m window --swap west"
	    }
          ]
        },

	{
	    "type": "basic",
	    "from": {
		"key_code": "m"
	    },
	    "conditions": [
		{
		    "type": "variable_if",
		    "name": "layer-wm",
		    "value": 1
		}
	    ],
	    "to": [{
		"set_variable": {
		    "name": "layer-wm-move",
		    "value": 1
		}
	    }]
	},

	{
	    "type": "basic",
	    "from": {
		"key_code": "h"
	    },
	    "conditions": [
		{
		    "type": "variable_if",
		    "name": "layer-wm-move",
		    "value": 1
		}
	    ],
	    "to": [{
		"shell_command": "yabai -m window --swap west"
	    }]
	},

	{
	    "type": "basic",
	    "from": {
		"key_code": "j"
	    },
	    "conditions": [
		{
		    "type": "variable_if",
		    "name": "layer-wm-move",
		    "value": 1
		}
	    ],
	    "to": [{
		"shell_command": "yabai -m window --swap south"
	    }]
	},

	{
	    "type": "basic",
	    "from": {
		"key_code": "k"
	    },
	    "conditions": [
		{
		    "type": "variable_if",
		    "name": "layer-wm-move",
		    "value": 1
		}
	    ],
	    "to": [{
		"shell_command": "yabai -m window --swap north"
	    }]
	},

	{
	    "type": "basic",
	    "from": {
		"key_code": "l"
	    },
	    "conditions": [
		{
		    "type": "variable_if",
		    "name": "layer-wm-move",
		    "value": 1
		}
	    ],
	    "to": [{
		"shell_command": "yabai -m window --swap east"
	    }]
	}
      ]
    }
  ]
}
